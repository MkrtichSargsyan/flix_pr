<%= form_with(model:@movie,local: true) do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description, rows: 7 %>
  <%= f.label :rating %>
  <%= f.text_field :rating %>
  <%= f.label :released_on %>
  <%= f.date_select :released_on, {}, {class: "date"} %>
  <%= f.label :total_gross %>
  <%= f.number_field :total_gross %>
  <%= f.submit %>
<% end %>
