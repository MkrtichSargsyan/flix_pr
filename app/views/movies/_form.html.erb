<%= form_with(model: movie,local:true) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :rating %>
  <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>

  <%= f.label :released_on %>
  <%= f.date_field :released_on ,{class:"date"}%>

  <%= f.label :total_gross %>
  <%= f.number_field :total_gross %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :image_file_name %>
  <%= f.text_field :image_file_name %>

  <%= f.submit %>
<% end %>